@model IEnumerable<GE.IServicio.Caja.DTO.CajaDto>

@{
    ViewData["Title"] = "ConsultaCaja";
}

<h1>Consulta Caja</h1>

<body>
    <div class="ContenedorTotal">
        <div style="margin-left:40px;">
            <div class="enbloque">
                <img src="~/img/cliente.png" class="imgcliente" width="110" height="110" />
                <h2 class="textuser" style="margin-right:40px">User : @ViewBag.Session</h2>
                <h1 class="logintext">Consulta Caja</h1>

                <form asp-action="ConsultaCaja" method="get">
                    <div class="buscar" style="font-size:x-large">
                        <p class="search">
                            Desde <input type="date" name="Desde" value="@ViewData["Desde"]" style="width:500px;height:40px;" /><br />
                            Hasta <input type="date" name="Hasta" value="@ViewData["Hasta"]" style="width:500px;height:40px;" /><br />
                            <input type="submit" value="Buscar" btn="btn btn-default" class="btn btn-primary" style="width:500px;height:40px;background-color:teal;" />
                        </p>
                        
                    </div>
                </form>
                <br />
            </div>
            <div>

                <div class="col-md-12">
                    <div class="container-table100">
                        <div class="wrap-table100">
                            <div class="col-md-12">

                                <table class="col-md-12">
                                    <thead>
                                        <tr class="table100-head">
                                            <th>
                                                Fecha Apertura
                                            </th>
                                            <th >
                                                Monto Apertura
                                            </th>
                                            <th >
                                                Fecha Cierre
                                            </th>
                                            <th >
                                                Monto Cierre
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr padding-bottom="2px">
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FechaApertura)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.MontoApertura)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FechaCierre)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.MontoCierre)
                                                </td>
                                                <td>
                                                    <a asp-action="Perfil" asp-controller="AbrirCaja" asp-route-id="@item.Id" class="btn badge-primary">Perfil</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
